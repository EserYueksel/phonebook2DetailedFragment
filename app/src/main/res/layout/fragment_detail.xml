<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detail_vacation_image"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/entry_acc_image" />

        <TextView
            android:id="@+id/detail_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_vacation_image"
            tools:text="Mokobe" />

        <TextView
            android:id="@+id/detail_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/detail_name_text"
            app:layout_constraintStart_toStartOf="@+id/detail_name_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_name_text"
            tools:text="+85238742" />

        <Button
            android:id="@+id/detail_call_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/baseline_call_24"
            app:layout_constraintEnd_toEndOf="@+id/detail_name_text"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/detail_name_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_number_text"
            tools:text="call" />

        <Button
            android:id="@+id/detail_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="@+id/detail_call_button"
            app:layout_constraintStart_toStartOf="@+id/detail_call_button"
            app:layout_constraintTop_toBottomOf="@+id/detail_call_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>